<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/aqua"/>
            <corners
                android:radius="40dp" />
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/aqua"/>
            <stroke
                android:width="1dp"
                android:color="@color/aqua"/>
            <corners
                android:radius="20dp" />
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>
</selector>